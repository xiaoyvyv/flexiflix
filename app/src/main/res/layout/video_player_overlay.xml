<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:id="@+id/panel_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_panel"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_brightness"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="6dp"
            android:padding="10dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_brightness_7" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_brightness"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:max="100"
            android:progress="60"
            android:progressTint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_panel"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_volume"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="6dp"
            android:padding="10dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_volume_up" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_volume"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:max="100"
            android:progress="60"
            android:progressTint="@android:color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/panel_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_panel"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_fast"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:padding="10dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_fast_forward" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/player_fast"
            android:textColor="@android:color/white" />

    </LinearLayout>
</merge>